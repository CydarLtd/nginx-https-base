listen 443 ssl http2;
listen [::]:443 ssl http2;

# no effect over HTTP, so its here
add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;

location /robots.txt {
    return 200 'User-agent: *\nDisallow: /\n';
}

location /favicon.ico {
    return 404;
    access_log     off;
    log_not_found  off;
}

location /ip {
    return 200 $realip_remote_addr;
    add_header Content-Type text/plain;
}

error_page 401 403 @denied;
error_page 404 @notfound;
error_page 400 500 501 503 504 @offline;
error_page 502 @offline;

# Unimpressed? see bug https://trac.nginx.org/nginx/ticket/97
location @denied {
    root /var/www/error_pages/;
    try_files /$host/denied.html /denied.html;
    allow all;
}

location @notfound {
    root /var/www/error_pages/;
    try_files /$host/notfound.html /notfound.html;
    allow all;
}

location @error {
    root /var/www/error_pages/;
    try_files /$host/error.html /error.html;
    allow all;
}

location @offline {
    root /var/www/error_pages/;
    try_files /$host/offline.html /offline.html;
    allow all;
}
